= form_for @album do |f|
  = error_messages_for(@album)

  .row
    .form-group
      .fa.fa-pencil.li
      = f.label :name
      = f.text_field :name, class: "form-control"
  .row
    .form-group
      .fa.fa-calendar.li
      = f.label :creation_date
      = f.date_select :creation_date, class: "form-control", start_year: 2015,
        end_year: Time.now.year, prompt: { :day => 'День', :month => 'Месяц', :year => 'Год' }
%br
  .actions
    =f.submit nil, class: "btn btn-primary"
