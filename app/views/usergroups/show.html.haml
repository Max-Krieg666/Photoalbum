.row
  .list-group
    .col-md-5
      .list-group-item.active
        .fa.fa-users.li
        = @usergroup.name
      .list-group-item
        -if @count.size!=0
          -@count.each do |user|
            =link_to user.login,user
            =link_to user,:method => :delete, :controller=> :user_usergroups, data:{confirm: "Вы уверены?"}, class: 'btn btn-danger btn-xs' do
              =fa_icon 'remove'
        -else
          .list-group-item
            .text-danger Группа пуста
      .list-group-item
        .fa.fa-user-plus.li
          =link_to 'Добавить пользователя',{:action => :new, :controller => :user_usergroups,:usergroup_id => @usergroup.id}, class: 'btn btn-default btn-xs'
%br
.row
  .btn-block
    =link_to edit_usergroup_path(@usergroup), class: 'btn btn-danger' do
      =fa_icon 'edit'
      Редактировать
    =link_to usergroups_path, class: 'btn btn-info' do
      =fa_icon 'reply'
      Назад
