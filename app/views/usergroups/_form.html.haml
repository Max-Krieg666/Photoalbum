= form_for @usergroup do |f|
  = error_messages_for(@usergroup)
  =f.hidden_field :owner_id, value: @current_owner.id
  .row
    .form-group
      .fa.fa-pencil.li
      = f.label :name
      = f.text_field :name, class: "form-control"
  .actions
    = f.submit 'Сохранить', class: 'btn btn-warning'
